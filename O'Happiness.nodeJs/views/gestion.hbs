

    <div class="container-lg mt-5 mb-4">

        <div class="table-wrapper text-center">
            
                <div class="row text-center">
                    
                        <h2>Utilisateurs</h2>
                   
                </div>
           
            <table class="table table-bordered border-dark" style="background-color: #BAD2B0;">
                <thead>
                    <tr class="text-center">
                        <th>Nom <i class="fa-sharp fa-solid fa-sort"></i></th>
                        <th>Role <i class="fa-sharp fa-solid fa-sort"></i></th>
                        <th>Email <i class="fa-sharp fa-solid fa-sort"></i></th>
                        <th>Date de création <i class="fa-sharp fa-solid fa-sort"></i></th>
                        <th>Actions </i></th>
                    </tr>
                </thead>
              
                <tbody>
                   {{#each data}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{role}}</td>
                        <td>{{email}}</td>
                        <td>{{moment createdAt format= "DD/MM/YYYY"}} à {{moment createdAt format="HH:mm"}}</td>
                        <td class="text-center">
                            <a class="btn btn-primary " href="/updateUser/{{_id}}" style="width: 100%;"><i class="fa-solid fa-pen-to-square"></i> Modifier </a>
                    <form method="POST" enctype="application/x-www-form-urlencoded"
                    action="/deleteUser/{{_id}}/?_method=delete">
                    <button onclick='return confirm("Êtes-vous sûr de vouloir supprimer?")' type="submit" class="btn btn-danger " style="width: 100%;"><i class="fa-solid fa-trash"></i> Supprimer</button>
                </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
               

            </table>
        </div>

    </div>
